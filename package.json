{
    "name": "@ims360/svelte-ivory",
    "version": "0.0.1",
    "devDependencies": {
        "@chromatic-com/storybook": "^3",
        "@eslint/compat": "^1.2.5",
        "@eslint/js": "^9.18.0",
        "@floating-ui/dom": "^1.6.13",
        "@lucide/svelte": "^0.487.0",
        "@sveltejs/adapter-auto": "^4.0.0",
        "@sveltejs/package": "^2.0.0",
        "@sveltejs/vite-plugin-svelte": "^5.0.0",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@tailwindcss/vite": "^4.0.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/svelte": "^5.2.4",
        "@vitest/browser": "^3.1.1",
        "@vitest/coverage-v8": "^3.1.1",
        "clsx": "^2.1.1",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-svelte": "^3.0.0",
        "globals": "^16.0.0",
        "jsdom": "^26.0.0",
        "playwright": "^1.51.1",
        "prettier": "^3.4.2",
        "prettier-plugin-svelte": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "publint": "^0.3.2",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.0",
        "tailwind-merge": "^3.2.0",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.20.0",
        "vite": "^6.0.0",
        "vitest": "^3.0.0",
        "dompurify": "^3.2.5",
        "marked": "^15.0.9"
    },
    "peerDependencies": {
        "@skeletonlabs/skeleton": "^3.1.1",
        "svelte": "^5.0.0",
        "@sveltejs/kit": "^2.16.0"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        },
        "./components/basic": {
            "types": "./dist/components/basic/index.d.ts",
            "svelte": "./dist/components/basic/index.js"
        },
        "./components/layout": {
            "types": "./dist/components/layout/index.d.ts",
            "svelte": "./dist/components/layout/index.js"
        },
        "./components/toast": {
            "types": "./dist/components/toast/index.d.ts",
            "svelte": "./dist/components/toast/index.js"
        },
        "./components/ai": {
            "types": "./dist/components/ai/index.d.ts",
            "svelte": "./dist/components/ai/index.js"
        },
        "./utils/functions": {
            "types": "./dist/utils/functions/index.d.ts",
            "svelte": "./dist/utils/functions/index.js"
        },
        "./utils/actions": {
            "types": "./dist/utils/actions/index.d.ts",
            "svelte": "./dist/utils/actions/index.js"
        }
    },
    "files": [
        "dist",
        "src/lib",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "keywords": [
        "svelte"
    ],
    "license": "MIT",
    "scripts": {
        "build": "vite build && npm run prepack",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "dev": "vite dev",
        "format": "prettier --write .",
        "lint": "prettier --check . && eslint .",
        "prepack": "svelte-kit sync && svelte-package && publint",
        "prepare": "svelte-kit sync || echo ''",
        "preview": "vite preview",
        "test": "npm run test:unit -- --run",
        "test:unit": "vitest"
    },
    "sideEffects": [
        "**/*.css"
    ],
    "svelte": "./dist/index.js",
    "type": "module",
    "types": "./dist/index.d.ts"
}
